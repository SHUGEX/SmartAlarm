<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.smartalarm">
    <!--需要对WiFi进行操作，所以需要设置网络权限-->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/saw"
        android:label="@string/app_name"
        android:roundIcon="@drawable/saw"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartAlarm">

        <activity

            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Tab1"
            android:launchMode="singleTask"
            />
        <activity android:name=".Tab2"
            android:launchMode="singleTask"
            />
        <activity android:name=".Tab3"
            android:launchMode="singleTask"
            />
        <activity android:name=".Tab4"
            android:launchMode="singleTask"
            />

    </application>

</manifest>